<!--pages/component/pages/button/button.wxml-->
<import src="../../../common/head.wxml"/>
<import src="../../../common/foot.wxml"/>

<view class="container">
  <template is="head" data="{{title: 'button'}}"></template>
  <view class="page-body">
    <view class="btn-area" id="buttonContainer">
      <button type="primary">页面主操作 Normal</button>
      <button type="primary" loading="true">页面主操作 Loadin</button>
      <button type="primary" disabled="true">页面主操作 Disabled</button>

      <button type="default">页面主操作 Normal</button>
      <button type="default" loading="true">页面主操作 Loadin</button>
      <button type="default" disabled="true">页面主操作 Disabled</button>

      <button type="warn">页面主操作 Normal</button>
      <button type="warn" loading="true">页面主操作 Loadin</button>
      <button type="warn" disabled="true">页面主操作 Disabled</button>

      <view class="button-sp-area">
        <button type="primary" plain="true">页面主操作 Normal</button>
        <button type="primary" loading="true" plain="true">页面主操作 Loadin</button>
        <button type="primary" disabled="true" plain="true">页面主操作 Disabled</button>

        <button type="default" plain="true">页面主操作 Normal</button>
        <button type="default" loading="true" plain="true">页面主操作 Loadin</button>
        <button type="default" disabled="true" plain="true">页面主操作 Disabled</button>

        <button class="mini-btn" type="default" size="mini">按钮</button>
        <button class="mini-btn" type="primary" size="mini">按钮</button>
        <button class="mini-btn" type="warn" size="mini">按钮</button>
      </view>
    </view>
  </view>
  <template is="foot"></template>
</view>
